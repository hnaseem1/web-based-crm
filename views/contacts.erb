<section class="contact-page">
  <article class="contacts-total">

    There are <strong><%= @contacts.length %></strong> contacts

  </article>



    <% @contacts.each do |contact| %>

      <article class="contact">
      <h3><a href="contacts/<%= contact.id %>"> <%= contact.full_name %> (<%= contact.email %>)</a></h3>
        <a href="/contacts/<%= contact.id %>/edit">Edit</a> | <a href="/contacts/<%= contact.id %>">Delete</a>
      </article>

    <% end %>


</section>
